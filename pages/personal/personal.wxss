/* pages/personal/personal.wxss */
page{
  background-color: #EBEDF0;
}
.box{
    width: 95%;
    background-color: #fff;
    border-radius: 10px;
    margin: 15px auto;
    padding: 15px 0;
    font-size: 15px;
    box-sizing: border-box;
}
.img{
  width: 95%;
  background-color: #fff;
  border-radius: 10px;
  margin: 15px auto;
  padding: 15px;
  font-size: 15px;
  box-sizing: border-box;
}
.btn,.btn2{
  width: 200px;
  height: 50px;
  position: fixed;
  left: 50%;
  bottom: 10%;
  transform: translate(-50%,-50%);
  border-radius: 50px;
  text-align: center;
  line-height: 50px;
  color: #fff;
  background-image: linear-gradient(to right, #ffc3a0 0%, #ffafbd 100%);
  box-shadow: -1px 9px 11px 0px rgb(228 49 49 / 23%);
  transition: .5s all;
}
.btn2{
  bottom: 20%;
}
.btn:hover{
  background-image: linear-gradient(to right, #faae81 0%, #fc99aa 100%);
}