page{
  background-color: rgba(243, 243, 243, 0.288);
}
.van-col--offset-5 {
  width: 40px !important;
}
.number{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.number van-button{
  margin: 10px 0;
}
.orderbox{
  width: 95%;
  height: 200px;
  background-color: rgb(255, 255, 255);
  margin: 10px auto;
  border-radius: 6px;
}
.cellclass{
  background: none !important;
}
.van-cell__title{
  color: rgb(87, 87, 87);
}
.van-cell__value{
  color: #000 !important;
}
.orderlist1{
  display: flex;
  flex-direction: column;
}
.ordertext1{
  font-weight: bold;
}
.ordertext2{
  font-size: 12px;
  margin-top: 10px;
}
.ordertext3{
  color: rgb(201, 45, 45);
}
.ordertext4{
  font-size: 12px;
}
.ordertext5{
  font-size: 14px;
}
.ordertext6{
  font-size: 18px;
  color: rgb(201, 45, 45);
}
