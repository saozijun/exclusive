/* pages/game/game.wxss */
page{
  background-color: rgb(241, 241, 241);
}
swiper{
  height: 220px;
}
.banner{
  position: relative;
  height: 320px;
  /* background-color: chartreuse; */
}
swiper-item{
  background-color: antiquewhite;
}
swiper-item image{
  width: 100%;
}
.tupbox{
  width: 40px;
  height: 20px;
  border-radius: 20px;
  background-color: rgb(0, 179, 15);
  line-height: 20px;
  text-align: center;
  color: #fff;
  font-size:11px;
  position: absolute;
  z-index: 99;
  right: 10px;
  top: 10px;
}
.textbox2{
  position: absolute;
  left: 5%;
  bottom: 40%;
  color: #fff;
}
.bannerblock{
  position: absolute;
  width: 95%;
  height: 100px;
  background-color: #fff;
  border-radius: 10px;
  left: 50%;
  bottom: -10%;
  transform: translate(-50%,-50%);
  box-shadow: 0px 0px 6px rgba(223, 223, 223, 0.055);
}
.ticketbox{
  background-color: #fff;
  padding: 10px;
  bottom: 0;
}
.xbox1{
  width: 100%;
  margin-top: 20px;
  height: 40px;
  /* background-color: aquamarine; */
}
.van-card{
  width: 95%;
  background-color: #fff !important;
  border-top: 1px solid rgba(216, 216, 216, 0.664);
  position: relative;
}
.van-button{
  width: 70px !important;
  background-color: rgb(218, 102, 87) !important;
  border-radius: 3px !important;
  color: #fff !important;
}
.van-card__price{
  font-size: 1rpx !important;
}
.van-card__price-integer{
  font-size: 26rpx !important;
}
.xbox1 text{
  font-weight: bold;
  margin-left: 10px;
}
.xbox2{
  width: 95%;
  height: 30px;
  /* background-color: aquamarine; */
}
.van-card__price-integer{
  font-size: 13px !important;
}
.xbox2 text{
  margin-left: 20px;
  font-size: 0.5rem;
}
.yuding{
  z-index: 999;
}
.price-top{
  position: absolute !important;
  right: -5% !important;
  top: 0 !important;
}
.bannerblockt{
  width: 100%;
  height: 60%;
  /* background-color: aquamarine; */
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom: 1px solid rgba(219, 219, 219, 0.342);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pingfengbox{
  width: 50%;
  height: 85%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bannerblockb{
  width: 90%;
  height: 40%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* background-color: aqua; */
}
.bannerblockt .xuzhibox view{
  display: flex;
  flex-direction: column;
  position: relative;
}
.bannerblockt .xuzhibox{
  width: 50%;
  height: 85%;
  border-right: 1px solid rgba(104, 104, 104, 0.342);
  display: flex;
  flex-direction: row;
  align-items: center;
}
.bannerblockt .xuzhibox view{
  width: 75%;
  /* background-color: black; */
  margin: 2% 0 0 10%;
}
.bannerblockt .xuzhibox view text:nth-child(1){
  font-size: 15px;
  margin-bottom: 5%;
}
.bannerblockt .xuzhibox view text:nth-child(2){
  font-size: 10px;
  color: rgb(105, 105, 105);
}
.xingbox{
  width: 85%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: rgb(253, 143, 0);
}
.pingfengbox .text5{
  font-size: 25rpx;
  color: rgb(102, 102, 102);
}
.position,.periphery{
  font-size: 15px;
  margin-left: 10px;
}
.periphery{
  color: rgb(0, 119, 255);
}
.van-card__img{
  border-radius: 2px !important;
}
.desc{
  font-size: 10px;
}
.descbox{
  position: relative;
  top: 5px;
}